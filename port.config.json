{
  "room1": {
    "ports": [
      {
        "path": "/dev/ttyUSB0",
        "actions": [
          {
            "socketEvent": "box.open",
            "socketReply": "boxIsOpened",
            "cmd": "openBox",
            "name": "box",
            "displayName": "Ящик"
          }
        ],
        "name": "boxPort"
      }
    ],
    "socketNamespace": "room1"
  },
  "room2": {
    "ports": [
      {
        "path": "/dev/ttyUSB1",
        "actions": [
          {
            "socketEvent": "coffin.open",
            "socketReply": "coffinIsOpened",
            "cmd": "openCoffin",
            "name": "coffin",
            "displayName": "Гроб"
          }
        ],
        "name": "coffinPort"
      }
    ],
    "socketNamespace": "room2"
  }
}
